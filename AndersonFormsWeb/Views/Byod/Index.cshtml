<body>
    <!--Content/Table-->
    <div class="wrapper">
        <br><br><br><br><br><br>
        <div ng-app="myApp" ng-controller="ByodController as model" ng-init="model.List()">

            <div style="float:right;display:inline;">
                <!--Add Button-->
                <a ng-href="{{'/Byod/Add/' + Byod.ByodId + Accounts.Username}}" button data-toggle="modal" data-target="#method" style="color:blue; "><i class="glyphicon glyphicon-plus-sign"></i> Add</a>
            </div>
            <br />
            <br />
            <br />
            <!--Table-->
            <table class="table table-striped table-hover" id="tableid">

                <!--Table Header-->
                <thead style="background-color:transparent;">
                    <tr id="info">

                        <th>Type of Device ID</th>
                        <th>Brand Name</th>
                        <th>Contact Number</th>
                        <th>Email</th>
                        <th>Serial Number</th>
                        <th></th>
                    </tr>
                </thead>
                <!--End of Table Header-->
                <!--Table Content-->
                <tbody>
                    <tr ng-repeat="Byod in model.Byods">

                        <td>
                            <span ng-bind="Byod.TypeOfDeviceId"></span>
                        </td>
                        <td>
                            <span ng-bind="Byod.BrandName"></span>
                        </td>
                        <td>
                            <span ng-bind="Byod.ContactNo"></span>
                        </td>
                        <td>
                            <span ng-bind="Byod.Email"></span>
                        </td>
                        <td>
                            <span ng-bind="Byod.SerialNumber"></span>
                        </td>
                        <td id="action">
                            <!--Update Button-->
                            <a ng-href="{{'/Byod/Update/' + Byod.ByodId}}" button data-toggle="modal" data-target="#method" style="color:blue;"><i class="glyphicon glyphicon-edit"></i>Update</a> &emsp;
                            <a ng-click="model.Delete(Byod)" button style="color:red;"> <i class="glyphicon glyphicon-trash"></i> Delete</a>
                            <!--End of Delete Button-->

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!--MODALS AND SCRIPTS-->
    <!--Modal for Add and Edit-->
    <div class="modal fade" id="method" role="dialog">
        <div id="myNav" class="overlay">
            <div class="modal-dialog">
                <div class="modal-content" style="border-color:blue;">
                </div>
            </div>
        </div>
    </div>


</body>